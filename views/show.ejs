<!DOCTYPE html>
<html lang="en">
<head>
  <title>Poll Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

<!-- JQuery Table Edit Functionality -->
  <script type="text/javascript" src="https://res.cloudinary.com/dxfq3iotg/raw/upload/v1567487539/jquery.tabledit.js"></script>

<!-- BootStrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
  <header>
    <ul class="nav nav-pills">

      <li class="nav-item">
        <a class="nav-link" href="#">SCHOODLE</a>
      </li>
    </ul>

  </header>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Invite Poll Participants</h5>
      <div class="input-group">
        <input type="text" class="form-control" value="/path/toPollId" placeholder="Some link path..." id="copy-input">
        <span class="input-group-btn">
          <button class="btn btn-secondary mb-2" type="button" id="copy-button" data-toggle="tooltip" data-placement="button" title="Copy to Clipboard">Copy
          </button>
        </span>
      </div>

      <form method ="POST" action="/polls/submit">
        <div class="form-row" id="submitter_input">
          <div class="form-group col-md-6">
            <label for="submitter_name">Name</label>
            <input type="text" name="submitter_name" class="form-control" id="submitter_name" placeholder="FirstName LastName">
          </div>
          <div class="form-group col-md-6">
            <label for="submitter_email">Email</label>
            <input type="email" name="submitter_email" class="form-control" id="submitter_email" placeholder="example@example.com">
          </div>
        </div>

        <div></div>

        <label for="poll_option">Select times best for you: </label>
        <div name="poll_option">

          <% let index = 0; %>
          <% for(let poll of polls) { %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="<%= poll.id %>" name="poll_option<%= index %>">
              <label class="form-check-label" for="poll_option<%= index %>">
                <%= poll.date_option %>    <%= poll.time_option %>
              </label>
            </div>
            <% index++; %>
          <% } %>

        </div>

        <div class="container mt-100">
          <div class="row">
          <div class="col-md-12">
          <div class="card">
            <div class="card-header">
                <h5>Edit row with Click</h5>
                <span>Click on row to perform edit action then Click 'Submit' to save</span>
            </div>
          <div class="card-block">
          <div class="table-responsive">
            <table class="table table-striped table-bordered" id="editable">
              <thead>
                <tr>
                  <th style="display: none;">#</th>
                  <th>Name</th>
                  <th>Date/Time1</th>
                  <th>Date/Time2</th>
                  <th>Date/Time3</th>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <th scope="row" style="display: none;">1</th>
                  <td class="tabledit-view-mode" style="cursor: pointer;"><span class="tabledit-span">Sam
                      </span><input class="tabledit-input form-control input-sm" type="text" name="name" value="Mark" style="display: none;" disabled=""></td>
                  <td class="tabledit-view-mode"><span class="tabledit-span">True/False</span>
                  <td class="tabledit-view-mode"><span class="tabledit-span">True/False</span>
                  <td class="tabledit-view-mode"><span class="tabledit-span">True/False</span>
                  </td>
                </tr>

                <tr>
                  <th scope="row" style="display: none;">2</th>
                  <td class="tabledit-view-mode" style="cursor: pointer;"><span class="tabledit-span">Mark
                      </span><input class="tabledit-input form-control input-sm" type="text" name="First Name" value="Jacob" style="display: none;" disabled=""></td>
                  <td class="tabledit-view-mode"><span class="tabledit-span">True/False</span>
                  <td class="tabledit-view-mode"><span class="tabledit-span">True/False</span>
                  <td class="tabledit-view-mode"><span class="tabledit-span">True/False</span>
                  </td>
                </tr>

              </tbody>
            </table>
          </div>
          </div>
          </div>
          </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary mb-2" id="submit" >Submit</button>
      </form>

</body>
</html>

